set -e -u

export GOPATH=$PWD/gopath
export PATH=$PWD/gopath/bin:$PATH


echo "preparing environment ..."
mkdir -p $GOPATH/src/github.com/lgsvl
cp -rf data-marketplace-chaincode $GOPATH/src/github.com/alcarria
cd $GOPATH/src/github.com/alcarria/data-marketplace-chaincode

echo "running tests..."
./scripts/run_units.sh -p "$@"
